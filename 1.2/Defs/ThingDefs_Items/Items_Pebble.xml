<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="ResourceVerbBase">
    <defName>Pebble</defName>
    <label>pebble</label>
    <description>A pebble is a rock that is 2-64mm. Pebble tools are among the earliest known man-made artifacts.</description>
    <equippedAngleOffset>-20</equippedAngleOffset>
    <soundInteract>Wood_Drop</soundInteract>
    <soundDrop>Wood_Drop</soundDrop>
    <smeltable>false</smeltable>
    <graphicData>
      <texPath>Things/Pebble</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
      <drawSize>(1.1,1.1)</drawSize>
    </graphicData>
    <statBases>
      <MarketValue>1.2</MarketValue>
      <MaxHitPoints>100</MaxHitPoints>
      <Mass>0.4</Mass>
      <Flammability>0</Flammability>
      <StuffPower_Armor_Sharp>0.74</StuffPower_Armor_Sharp>
      <StuffPower_Armor_Blunt>0.34</StuffPower_Armor_Blunt>
      <StuffPower_Armor_Heat>0.9</StuffPower_Armor_Heat>
      <StuffPower_Insulation_Cold>8</StuffPower_Insulation_Cold>
      <StuffPower_Insulation_Heat>4</StuffPower_Insulation_Heat>
      <SharpDamageMultiplier>0.6</SharpDamageMultiplier>
      <BluntDamageMultiplier>0.7</BluntDamageMultiplier>
    </statBases>
    <stuffProps>
      <stuffAdjective>pebbly</stuffAdjective>
      <categories>
        <li>Stony</li>
      </categories>
      <commonality>1.00</commonality>
      <color>(169,169,169)</color>
      <constructEffect>ConstructWood</constructEffect>
      <appearance>Pebbly</appearance>
      <soundImpactStuff>BulletImpact_Wood</soundImpactStuff>
      <soundMeleeHitSharp>MeleeHit_Wood</soundMeleeHitSharp>
      <soundMeleeHitBlunt>MeleeHit_Wood</soundMeleeHitBlunt>
      <statFactors>
        <MaxHitPoints>0.3</MaxHitPoints>
        <Beauty>1</Beauty>
        <Flammability>0</Flammability>
        <WorkToMake>0.9</WorkToMake>
        <WorkToBuild>0.9</WorkToBuild>
        <DoorOpenSpeed>1.0</DoorOpenSpeed>
      </statFactors>
    </stuffProps>
    <isTechHediff>true</isTechHediff>
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>
    <tools>
      <li>
        <label>pebble</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>10</power>
        <cooldownTime>1.9</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <RecipeDef>
    <defName>Make_Pebble</defName>
    <label>make 25 pebbles</label>
    <description>Break pebbles of a chunk.</description>
    <jobString>Breaking pebbles of a chunk.</jobString>
    <workAmount>800</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>CutStone</effectWorking>
    <soundWorking>Recipe_MakeStoneBlocks</soundWorking>
    <targetCountAdjustment>25</targetCountAdjustment>
    <recipeUsers>
      <li>CraftingSpot</li>
      <li>TableStonecutter</li>
    </recipeUsers>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>StoneChunks</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>StoneChunks</li>
      </categories>
    </fixedIngredientFilter>
    <products>
      <Pebble>25</Pebble>
    </products>
  </RecipeDef>
  <RecipeDef>
    <defName>Make_BulkPebble</defName>
    <label>make pebbles 125</label>
    <description>Break pebbles of 5 chunks.</description>
    <jobString>Breaking pebbles of 5 chunk.</jobString>
    <workAmount>3000</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>CutStone</effectWorking>
    <soundWorking>Recipe_MakeStoneBlocks</soundWorking>
    <targetCountAdjustment>125</targetCountAdjustment>
    <recipeUsers>
      <li>CraftingSpot</li>
      <li>TableStonecutter</li>
    </recipeUsers>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>StoneChunks</li>
          </categories>
        </filter>
        <count>5</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>StoneChunks</li>
      </categories>
    </fixedIngredientFilter>
    <products>
      <Pebble>125</Pebble>
    </products>
  </RecipeDef>
</Defs>